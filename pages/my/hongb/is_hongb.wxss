page,
view {
  box-sizing: border-box;
}

page {
  padding-right: 28rpx;
  padding-left: 84rpx;
  padding-top: 18rpx;
  display: flex;
  flex-direction: column;
}

.card {
  flex: 1;
  height: 185rpx;
  display: flex;
  align-items: center;
  position: relative;
  background: #fff;
  padding-left: 30rpx;
  padding-right: 50rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.icon {
  position: absolute;
  left: -16rpx;
  top: 50%;
  transform: translate(-100%, -50%);
}

.card_l {
  width: 82rpx;
  height: 88rpx;
}

.card_r {
  height: 100%;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  margin-left: 55rpx;
}

.card_r>view {
  display: flex;
  align-items: initial;
  justify-content: center;
  flex-direction: column;
}

.card_info {
  flex: 1;
}

.card_info>view:nth-of-type(1) {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.card_info>view:nth-of-type(2) {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
}

.card_info>view:nth-of-type(3) {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
}

.card_num {
  font-size: 56rpx;
  font-family: PingFangSC-Semibold;
  color: rgba(255, 126, 87, 1);
}

.card.yiyong .card_num {
  color: rgba(205, 205, 205, 1);
}

.card.guoqi .card_num {
  color: rgba(205, 205, 205, 1);
}

.logo {
  width: 122rpx;
  height: 104rpx;
  position: absolute;
  top: 14rpx;
  right: 142rpx;
}

.btn {
  position: fixed;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 690rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 34rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}