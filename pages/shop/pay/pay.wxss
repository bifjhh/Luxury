page{
  display: flex;
  height: 100%;
  flex-direction: column;
}

.pay_body{
  flex: 1;
}
.pay_num{
  height: 140rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
}
.pay_num text:nth-of-type(1){
  font-size:36rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(102, 102, 102, 1);
}
.num{
  font-size:48rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(255, 114, 114, 1);
}
  
.way_box {
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 122rpx;
  border-bottom: 1px solid #f2f2f2; 
}
.fl{
    display: flex;
    align-items: center;
}
.way_logo{
  width: 46rpx;
  height: 46rpx;
}
.fl>text{
  margin-left: 46rpx;
}

.now_pay{
  padding: 0 30rpx;
  padding-top: 70rpx;
}
.pay_btn{
  height: 80rpx;
  border-radius:40px;
  font-size:34rpx;
  font-family:PingFang-SC-Bold;
  color:rgba(255, 255, 255, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}
.fq{
  position: relative;
}
.jt{
  position: absolute;
  height: 26rpx;
  width: 15rpx;
  top: 50%;
  right: 40rpx;
  transform: translateY(-50%);
  transform: rotate(90deg)
}
.fq_box{
  height: 124rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f2f2f2;
  display: flex;
  /* align-items: center; */
  justify-content: center;
  flex-direction: column;
  padding-left: 169rpx;
  position: relative;
}
.fq_box>text:nth-of-type(1){
  font-size:34rpx;
  font-family:PingFang-SC-Medium;
  color:#333;
  line-height:34rpx;
}
.fq_box>text:nth-of-type(2){
  margin-top: 20rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  color:#999;
  line-height:26rpx;
}
.fq_box>.icon{
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform:translateY(-50%);
}

.show_modal{
  position: fixed;
  width: 100%;
  height: 100%;
background:rgba(0,0,0,.4);
}
.modal{
  width: 516rpx;
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
}
.modal_info{
  height: 202rpx;
  padding: 0 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  border-bottom: 1px solid #f2f2f2;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(51,51,51,1);
  line-height:42rpx;
}
.modal_btn{
  height: 80rpx;
  display: flex;
  justify-content: center;
}
.modal_btn>text{
  width: 50%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(51,51,51,1);
}
.modal_btn>text:nth-of-type(1){
  border-right: 1px solid #f2f2f2;
  color:rgba(153,153,153,1);
  
}