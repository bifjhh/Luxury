/* pages/index/search/search.wxss */

.title {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
}

.search_box {
  width: 690rpx;
  height: 60rpx;
  border-radius: 30px;
  padding-left: 68rpx;
  box-sizing: border-box;
  background: rgba(238, 238, 238, 1);
  position: relative;
}

.search {
  position: absolute;
  top: 50%;
  left: 32rpx;
  transform: translateY(-50%);
}

.searchTab {
  width: 68rpx;
  height: 60rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.wrap_box {
  display: flex;
  flex-wrap: wrap;
}

.history,
.hot {
  margin-top: 2px;
  width: 100%;
  /* height: 220rpx; */
  background: #fff;
  display: flex;
  flex-direction: column;
}

.hot {
  margin-top: 20rpx;
}

.hsy_tit,
.hot_tit {
  width: 100%;
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.hsy_txt,
.hot_txt {
  font-size: 30rpx;
  font-family: PingFang-SC-Regular;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
}

.hsy_img,
  {
  width: 32rpx;
  height: 32rpx;
}

.hsy_info,
.hot_info {
  flex: 1;
  padding: 0 40rpx;
  padding-bottom: 20rpx;
  margin-top: -20rpx;
}

.hsy_cent,
.hot_cent {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(102, 102, 102, 1);
  padding: 12rpx 20rpx;
  border-radius: 10rpx;
  border: 1px solid rgba(102, 102, 102, 1);
  display: inline;
  margin-top: 20rpx;
  margin-left: 28rpx;
}