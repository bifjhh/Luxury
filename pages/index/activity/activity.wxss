@import '/components/goodsList/list.wxss';
.banner {
  width: 100%;
  height: 306rpx;
}

.filtrate {
  width: 100%;
}

.fil_title {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background: #fff;
}

.fil_info {
  flex: auto;
  height: 100%;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(153, 153, 153, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.fil_info view {
  margin-left: 10rpx;
  width: 14rpx;
  height: 22rpx;
  position: relative;
  /* overflow: hidden; */
}

.fil_info view image {
  position: absolute;
  top: 0;
  left: 0;
}

.opt {
  color: rgba(173, 155, 106, 1);
}


.filtrate_list {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 100%;
  background-color: rgba(0, 0, 0, .7);
  z-index: 9;
  display: flex;
}

.filtrate_list view {
  box-sizing: border-box;
}
.filtrateEnd{
  width: 80rpx;
  height: 100%;
}
.options {
  flex: 1;
  /* margin-left: 80rpx; */
  height: 100%;
  background-color: #fff;
  padding-left: 20rpx;
  padding-bottom: 110rpx;
  position: relative;
}


.h1 {
  height: 93rpx;
  line-height: 93rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(102, 102, 102, 1);
}

.opt_list {
  display: flex;
  flex-wrap: wrap;
}

.opt_goods {
  width: 145rpx;
  height: 56rpx;
  padding: 0 5rpx;
  background: rgba(238, 238, 238, 1);
  border-radius: 6px;
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  line-height: 56rpx;
  text-align: center;
  margin-right: 17rpx;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.opt_goods.active {
  background-color: #C0B48E;
  color: #fff;
}

.jg_box {
  width: 100%;
  display: flex;
  height: 56rpx;
  justify-content: space-between;
  padding-right: 20rpx;
  align-items: center;
  box-sizing: border-box;
}

.xian {
  width: 74rpx;
  height: 1px;
  background-color: #999999;
}

.zdj,
.zgj {
  width: 235rpx;
  height: 56rpx;
  background: rgba(238, 238, 238, 1);
  border-radius: 6px;
}

.jg_box input {
  height: 100%;
  text-align: center;
}

.btn {
  width: 600rpx;
  height: 70rpx;
  position: absolute;
  border-radius: 35px;
  display: flex;
  justify-content: center;
  border: 1px solid #ccc;
  text-align: center;
  overflow: hidden;
  bottom: 20rpx;
  left:50%;
  transform: translateX(-50%);
}

.btn view {
  flex: auto;
  line-height: 70rpx;
  font-size: 32rpx;
}

.btn_l {
  font-family: PingFang-SC-Medium;
  color: rgba(102, 102, 102, 1);
}

.btn_r {
  background: rgba(192, 180, 142, 1);
  color:rgba(255,255,255,1);
  font-family: PingFang-SC-Medium;
}