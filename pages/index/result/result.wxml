
<import  src="/components/goodsList/list.wxml" />

<view class="title">
  <view class="search_box">
    <view class="searchTab"></view>
    <image class="search" style="width:18rpx;height:20rpx" src="/images/home/search2.png" />
    <input type="text" style="height:100%;" placeholder="请输入商品名称" auto-focus />
  </view>
</view>

<view class="filtrate">
  <view class="fil_title">
    <view class="fil_info opt">
      综合
    </view>
    <view class="fil_info">
      价格
    </view>
    <view class="fil_info">
      上新
    </view>
    <view class="fil_info" bindtap="filtrate">
      筛选
    </view>
  </view>
  <template is="goodsList"></template>
    
</view>

<view class="filtrate_list" animation="{{animation}}">
  <view class="options">
    <view class="opt_info">
      <view class="h1">
        品牌
      </view>
      <view class="opt_list">
        <view  wx:for="{{pinpai}}" wx:key="index" class="opt_goods {{item.is?'active':''}}" data-cls="pinpai"  data-id="{{index}}" bindtap="ispl">
          {{item.name}}
        </view>
      </view>
    </view>
    <view class="opt_info">
      <view class="h1">
        品类
      </view>
       <view class="opt_list">
        <view  wx:for="{{pinlei}}" wx:key="index" class="opt_goods {{item.is?'active':''}}" data-cls="pinlei"  data-id="{{index}}" bindtap="ispl">
          {{item.name}}
        </view>
      </view>
    </view>
    <view class="opt_info">
      <view class="h1">
        价格
      </view>
      <view class="jg_box">
        <view class='zdj'>
          <input type="number" bindinput="zdj" placeholder="最低价"  />
        </view>
        <view class='xian'></view>
        <view class='zgj'>
          <input type="number" bindinput="zgj" placeholder="最高价"  />
        </view>
      </view>
    </view>
    <view class="opt_info">
      <view class="h1">
        新旧
      </view>
       <view class="opt_list">
        <view  wx:for="{{xinjiu}}" wx:key="index" class="opt_goods {{item.is?'active':''}}" data-cls="xinjiu"  data-id="{{index}}" bindtap="ispl">
          {{item.name}}
        </view>
      </view>
    </view>
    <view class="opt_info">
      <view class="h1">
        降价/分期
      </view>
      <view class="opt_list">
        <view  wx:for="{{isfq}}" wx:key="index" class="opt_goods {{item.is?'active':''}}" data-cls="isfq"  data-id="{{index}}" bindtap="ispl">
          {{item.name}}
        </view>
      </view>
    </view>
    <view class="btn">
      <view class="btn_l">
        重置
      </view>
      <view class="btn_r">
        确定
      </view>
    </view>
  </view>
</view>