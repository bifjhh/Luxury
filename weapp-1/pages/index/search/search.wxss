/* pages/index/search/search.wxss */

.title{
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
}
.search_box{
  width:690rpx;
  height:60rpx; 
  border-radius: 30px;
  padding-left: 68rpx;
  box-sizing: border-box;
  background:rgba(238,238,238,.3);
  position: relative;
}
.search{
  position: absolute;
  top: 50%;
  left: 32rpx;
  transform: translateY(-50%)
}

.history{
  margin-top: 2px;
  width: 100%;
  height: 220rpx;
  background: #fff;
}

.hsy_tit{
  width: 100%;
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.hsy_txt{
  font-size:30rpx;
  font-family:PingFang-SC-Regular;
  color:rgba(153,153,153,1);
  line-height:40rpx;
}
.hsy_img{
  width: 32rpx;
  height: 32rpx;
}