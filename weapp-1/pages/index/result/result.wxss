@import '/components/goodsList/list.wxss';

.title {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
}

.search_box {
  width: 690rpx;
  height: 60rpx;
  border-radius: 30px;
  padding-left: 68rpx;
  box-sizing: border-box;
  background: rgba(238, 238, 238, 1);
  position: relative;
}

.search {
  position: absolute;
  top: 50%;
  left: 32rpx;
  transform: translateY(-50%)
}

.searchTab {
  width: 68rpx;
  height: 60rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
}

.filtrate{
  width: 100%;
  
}

.fil_title{
  margin-top: 2px;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background: #fff;
}
.fil_info{
  flex: auto;
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(153, 153, 153, 1);
}

.opt{
  color:rgba(173, 155, 106, 1);
}
