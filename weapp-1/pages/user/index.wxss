page{
  background: rgba(0, 0, 0, .4);

}

.btn_box{
  position: fixed;
  left: 50%;
  top: 40%;
  width: 80%;
  transform: translate(-50%,-50%);
  background: #fff;
  border-radius: 20rpx;
  padding-top: 20rpx;
  overflow: hidden;
}

.logo{
  margin-top: 20rpx;
  width:80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #999;
  color: black;
  overflow: hidden;
  text-align: center;
  line-height: 80rpx;
}
.btn_txt,.btn_ts{
  line-height: 100rpx;
}
.btn_btn{
  display: flex;
  justify-content: center;
  width: 100%;
  border-top: 1px solid #999;
}
.btn_btn>button{
  flex: auto;
  padding: 0;
  margin: 0;
  border: none;
  background: none;
  border-radius:0;

}
.btn_btn>button:hover {
  background: none;
  border-radius:0;

}
.getUserInfo{
  border-left: 1px solid #999;
  box-sizing: border-box;
}