view {
  box-sizing: border-box;
}

.nav_tab{
  height: 80rpx;
  padding:0 25rpx;
}
.tab_box{
  height: 80rpx;
  width:auto;
  white-space:nowrap;

}
.tab_box view {
  display: inline-block;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(51,51,51,1);
  position: relative;
  padding: 0 25rpx;
}
.nav_tab view.action {
  color: rgba(173, 155, 106, 1);
}
.nav_tab .action::after{
  position: absolute;
  content: '';
  width: 40rpx;
  height: 4rpx;
  background:rgba(173,155,106,1);
  border-radius:2px;
  left: 50%;
  bottom: 2px;
  transform: translateX(-50%);
}
.indent {
  height: 336rpx;
  display: flex;
  align-content: center;
  justify-content: center;
  flex-direction: column;
  padding: 0 30rpx;
}

.haoma {
  display: flex;
  align-content: center;
  justify-content: space-between;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.logo {
  margin-top: 40rpx;
  height: 150rpx;
  display: flex;
  /* justify-content: center; */
}

.logo_img {
  width: 150rpx;
  height: 150rpx;
}

.logo_info {
  margin-left: 20rpx;
  width: 410rpx;
  height: 85rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
